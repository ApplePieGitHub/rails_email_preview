platform :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'racc'
end


if ENV['TRAVIS']
  gem 'codeclimate-test-reporter', group: :test, require: false
else
  group :test, :development do
    gem 'byebug', platform: :mri_21, require: false
  end

  group :development do
    gem 'puma'
  end

  group :test do
    gem 'simplecov', require: false
  end
end